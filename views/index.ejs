<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0"
      crossorigin="anonymous"
    />
    <style>
      img {
        width: "100%";
      }
    </style>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
      crossorigin="anonymous"
      defer
    ></script>
    <title>Mongo File Uploader</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6 m-auto">
          <h1 class="text-center display-4 my-4">Mongo File Uploads</h1>
          <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="input-group mb-3">
              <input
                type="file"
                name="file"
                class="form-control"
                id="inputGroupFile02"
              />
              <label class="input-group-text" for="inputGroupFile02"
                >Upload</label
              >
            </div>
            <div class="d-grid gap-2">
              <input
                type="submit"
                value="Submit"
                class="btn btn-primary d-block"
              />
            </div>
          </form>
          <hr />
          <% if (files) { %> <% files.forEach(file => { %>
          <div class="card card-body mb-3">
            <% if (file.isImage) { %>
            <img src="image/<%= file.filename %>" />
            <% } else { %> <%= file.filename %> <% } %>
            <form action="/files/<%= file._id %>?_method=DELETE" method="POST">
              <div class="d-grid gap-2 mt-2">
                <button class="btn btn-danger d-block">DELETE</button>
              </div>
            </form>
          </div>
          <% }) %> <% } else { %>
          <p>No files to show</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
